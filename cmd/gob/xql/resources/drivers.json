{
  "sqlite": {
    "drivers": [
      "github.com/mattn/go-sqlite3",
      "modernc.org/sqlite",
      "github.com/glebarez/sqlite"
    ],
    "typeMapping": {
      "int64": "INTEGER",
      "int": "INTEGER",
      "int32": "INTEGER",
      "int16": "INTEGER",
      "int8": "INTEGER",
      "bool": "INTEGER",
      "string": "TEXT",
      "float32": "REAL",
      "float64": "REAL",
      "time.Time": "TEXT",
      "[]byte": "BLOB"
    },
    "pk": {
      "integer": "PRIMARY KEY AUTOINCREMENT"
    }
  },
  "mysql": {
    "drivers": [
      "github.com/go-sql-driver/mysql",
      "github.com/ziutek/mymysql"
    ],
    "typeMapping": {
      "int64": "BIGINT",
      "int": "BIGINT",
      "int32": "INT",
      "int16": "SMALLINT",
      "int8": "TINYINT",
      "bool": "TINYINT(1)",
      "string": "TEXT",
      "float32": "FLOAT",
      "float64": "DOUBLE",
      "time.Time": "DATETIME",
      "[]byte": "BLOB"
    },
    "pk": {
      "integer": "PRIMARY KEY AUTO_INCREMENT"
    }
  },
  "postgres": {
    "drivers": [
      "github.com/lib/pq",
      "github.com/jackc/pgx/v5"
    ],
    "typeMapping": {
      "int64": "BIGINT",
      "int": "BIGINT",
      "int32": "INTEGER",
      "int16": "SMALLINT",
      "int8": "SMALLINT",
      "bool": "BOOLEAN",
      "string": "TEXT",
      "float32": "REAL",
      "float64": "DOUBLE PRECISION",
      "time.Time": "TIMESTAMP WITH TIME ZONE",
      "[]byte": "BYTEA"
    },
    "pk": {
      "integer": "PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY"
    }
  }
}
